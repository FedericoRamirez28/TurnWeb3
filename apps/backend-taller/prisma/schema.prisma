generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ================= AUTH ================= */

enum UserRole {
  ADMIN
  JEFE_MECANICOS
  MECANICO
  LECTURA
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         UserRole @default(MECANICO)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

/* ================= TALLER ================= */

enum Prioridad {
  baja
  alta
  urgente
}

model Movil {
  id          String   @id @default(cuid())
  numero      Int?     @unique
  patenteFija String?

  // VTV persistente
  vtvFecha    DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  arreglos    Arreglo[]
  partes      ParteDiario[]
  finalizados FinalizadoItem[]
  historial   HistorialDiaRow[]
}

/* ================= PARTE DIARIO ================= */

model ParteDiario {
  id        String   @id @default(cuid())
  movilId   String
  movil     Movil    @relation(fields: [movilId], references: [id], onDelete: Cascade)

  fecha     DateTime @default(now()) // fecha del parte (día)
  patente   String?
  chofer    String?
  kmInicio  Int?
  kmFin     Int?
  observaciones String?

  createdAt DateTime @default(now())

  @@index([movilId, fecha])
  @@index([movilId, createdAt])
}


/* ================= ARREGLOS ================= */

model Arreglo {
  id          String     @id @default(cuid())
  movilId     String
  movil       Movil      @relation(fields: [movilId], references: [id], onDelete: Cascade)

  // snapshot útil para UI
  patenteSnap String?
  fechaISO    String?     // YYYY-MM-DD
  motivo      String?
  anotaciones String?
  prioridad   Prioridad   @default(baja)

  // ✅ NUEVO: archivado (NO se borra al finalizar)
  archived    Boolean     @default(false)
  archivedAt  DateTime?

  tareas      Tarea[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([movilId, createdAt])
  @@index([movilId, archived])
}

/* ================= TAREAS ================= */

model Tarea {
  id        String   @id @default(cuid())
  arregloId String
  arreglo   Arreglo  @relation(fields: [arregloId], references: [id], onDelete: Cascade)

  texto     String
  completa  Boolean  @default(false)
  orden     Int      @default(0)

  createdAt DateTime @default(now())

  @@index([arregloId, orden])
}

/* ================= FINALIZADOS ================= */
/* Snapshot histórico del arreglo terminado */

model FinalizadoItem {
  id          String   @id @default(cuid())
  movilId     String
  movil       Movil    @relation(fields: [movilId], references: [id], onDelete: Cascade)

  // snapshot completo del arreglo + tareas
  payload     Json

  createdAt   DateTime @default(now())

  @@index([movilId, createdAt])
}

/* ================= HISTORIAL POR DÍA ================= */
/* Para pantalla Historial del día + calendario */

model HistorialDiaRow {
  id               String    @id @default(cuid())
  movilId          String
  movil            Movil     @relation(fields: [movilId], references: [id], onDelete: Cascade)

  arregloId        String?   @unique

  fechaISO         String
  horaEntrada      String?
  horaSalida       String?
  salidaIndefinida Boolean   @default(false)

  patente          String?
  motivo           String?
  prioridad        Prioridad @default(baja)
  anotaciones      String?

  // ✅ NUEVO: snapshot (tareas, etc) para que el modal del calendario siga mostrando info
  payload          Json?

  createdAt        DateTime  @default(now())

  @@index([movilId, fechaISO])
}

